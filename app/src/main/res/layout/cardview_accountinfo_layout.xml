<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    android:background="@color/colorPageBkg">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp" >

        <RelativeLayout
            android:id="@+id/rlayout_account_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp">

            <ImageView
                android:id="@+id/imageView_account_coinlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/celo"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:padding = "5dp"/>

            <!--
            <TextView
                android:id="@+id/textView_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="account name"
                android:textSize="15sp"
                android:textColor="@color/colorAccountInfo"

                android:paddingRight="20dp"
                android:layout_toRightOf="@+id/imageView_account_coinlogo"
                android:layout_centerVertical="true"/>
                -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/imageView_account_coinlogo"
                android:orientation="vertical">

                <!--
                <TextView
                    android:id="@+id/textView_account_usdbalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="$ 0.0"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccountInfo"/>
                    -->

                <TextView
                    android:id="@+id/textView_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:text="account name sfsdsfsdfdsfsdfs ew rwer dfsf"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccountInfo"
                    android:layout_weight="4"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/textView_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_margin="8dp"
                    android:textAlignment="viewEnd"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/colorPurple"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/next_icon"
                android:visibility="invisible"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="30dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
